---
import { Icon } from 'astro-icon/components'

import HeaderLink from './HeaderLink.astro'
---

<header class="px-1">
  <nav class="grid grid-cols-3 gap-4">
    <div class="flex justify-start"></div>
    <div class="flex justify-center">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/timeline">Timeline</HeaderLink>
    </div>
    <div class="flex justify-end">
      <a href="https://github.com/S0PEX" target="_blank">
        <span class="sr-only">Go to my GitHub repo</span>
        <Icon name="mdi:github" size={40} />
      </a>
    </div>
  </nav>
</header>
<style>
  nav a {
    @apply px-1 py-0.5 border-b-4 border-b-transparent;
  }
  nav a.active {
    @apply no-underline border-b-black;
  }
</style>
